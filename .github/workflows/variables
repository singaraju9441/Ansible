name: Workflow with Environment Variables on Ubuntu

on: workflow_dispatch

# Set environment variables for the entire workflow
env:
  GLOBAL_VAR: "This is a global variable"
  NODE_ENV: "production"

jobs:
  example_job:
    runs-on: ubuntu-latest

    # Set environment variables specific to this job
    env:
      JOB_VAR: "This variable is specific to example_job"

    steps:
      - name: Check out the repository
        uses: actions/checkout@v2

      - name: Print global environment variable
        run: echo "The global variable is $GLOBAL_VAR"

      - name: Print node environment
        run: echo "The Node environment is $NODE_ENV"

      - name: Print job-specific environment variable
        run: echo "The job variable is $JOB_VAR"

      - name: Set environment variable for this step
        run: |
          MY_STEP_VAR="This variable is for this step only"
          echo "The step variable is $MY_STEP_VAR"

      - name: Access secret environment variable
        env:
          MY_SECRET: ${{ secrets.MY_SECRET }}
        run: echo "The secret variable is $MY_SECRET" # Replace with your command
